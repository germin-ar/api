<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">



    <changeSet id="20240619_0" author="msoto">
        <createTable tableName="plant_history" schemaName="garden">
            <column name="id" type="int" autoIncrement="true">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="id_plant" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="notes" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="height" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="alias" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="url_image" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="modified_at" type="datetime" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="id_diseases" type="int">
                <constraints nullable="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="plant_history"
                                 baseColumnNames="id_plant"
                                 constraintName="fk_id_plant"
                                 referencedTableName="plant"
                                 referencedColumnNames="id"
                                 baseTableSchemaName="garden"
                                 referencedTableSchemaName="garden"
                                 validate="true"
        />

    </changeSet>


</databaseChangeLog>
